# editorconfig.org

# top-most EditorConfig file
root = true

[*]
# 4 Tab indentation
indent_style = tab
indent_size = 4
# Unix-style newlines 
end_of_line = lf
# Set default charset
charset = utf-8
trim_trailing_whitespace = true
# A newline ending every file
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false